{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "-- Grafana --",
          "uid": "grafana"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["api", "observability"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "label": "Prometheus",
        "name": "DS_PROM",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "regex": "",
        "type": "datasource"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "API Observability",
  "uid": "api-observability",
  "version": 1,
  "weekStart": ""
  ,
  "panels": [
    {
      "type": "barchart",
      "title": "Requests by Status (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(http_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "barchart",
      "title": "Socket Events by Type (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(socket_events_total[5m])) by (event)",
          "legendFormat": "{{event}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "barchart",
      "title": "Top Routes (5m)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "orientation": "auto"
      },
      "targets": [
        {
          "expr": "topk(10, sum(increase(http_requests_by_route_total[5m])) by (route))",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p50/p90/p99 (ms)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "fieldConfig": {"defaults": {"unit": "ms"}, "overrides": []},
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum(rate(http_request_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Rate (RPS)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_ms_count[1m]))",
          "legendFormat": "rps",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Memory (RSS)",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "targets": [
        { "expr": "process_resident_memory_bytes", "refId": "A" }
      ],
      "fieldConfig": {"defaults": {"unit": "decbytes"}, "overrides": []}
    },
    {
      "type": "stat",
      "title": "Uptime (s)",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "targets": [
        { "expr": "process_uptime_seconds", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Build Info",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROM}" },
      "targets": [
        { "expr": "build_info", "refId": "A" }
      ]
    }
  ]
}
